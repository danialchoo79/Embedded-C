#include <stdio.h>
#include <stdint.h>

void wait_for_user_input(void);

int main(void)
{
	uint32_t height = 0;
//	int row = 0;

	printf("Enter height of pyramid: ");
	fflush(stdout);

	scanf("%u",&height);

	if(height < 1)
	{
		printf("-ve values are not allowed.\n");
		fflush(stdout);
	}

	else
	{
		for(uint32_t i=1; i <= height; i++)
		{
			for(uint32_t j=i; j>0; j--)
			{
				printf("%d ",j);
				fflush(stdout);
			}
			printf("\n");
			fflush(stdout);
		}
	}

	wait_for_user_input();

	return 0;
}

void wait_for_user_input(void)
{
	while(getchar() != '\n')
	{
		// just read the input buffer and do nothing
	}
	getchar();
}


