#include <stdio.h>

int main(void)
{
	int height = 0;
	int row = 0;

	printf("Enter height of pyramid: ");
	fflush(stdout);

	scanf("%d",&height);

	for(int i=0; i <= height-1; i++)
	{
		for(int j=0; j<=row-1; j++)
		{
			printf("%d",row);
			fflush(stdout);
		}
		printf("\n");
		row++;
	}
	return 0;
}
