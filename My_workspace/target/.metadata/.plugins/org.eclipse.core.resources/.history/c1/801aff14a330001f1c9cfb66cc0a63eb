#include <stdint.h>

#if !defined(__SOFT_FP__) && defined(__ARM_FP)
  #warning "FPU is not initialized, but the project is compiling for an FPU. Please initialize the FPU before use."
#endif

int main(void)
{
	uint32_t *pClkCtrlReg = (uint32_t*)0x40023830;
	uint32_t *pPortDModeReg = (uint32_t*)0x40020C00;
	uint32_t *pPortDOutReg = (uint32_t*)0x40020C14;

	uint32_t *pPortAModeReg = (uint32_t*)0x40020000;
	uint32_t *pPortAInReg = (uint32_t*)0x40020010;
	uint32_t *pPortAPullUpDownReg = (uint32_t*)0x4002000C;


	// 1. Enable the Clock for GPIOD, GPIOA Peripheral in the AHB1ENR (Set the 3rd bit position)
	*pClkCtrlReg |= (1 << 3);
	*pClkCtrlReg |= (1 << 0);

	// 2. Configure PD12 as Output
	*pPortDModeReg &= ~(3 << 24);

	// b. Make 24th Bit Position 1 (SET)
	*pPortDModeReg |= (1 << 24);

	// Configure PA0 as Input Mode (GPIOA MODE REGISTER)
	*pPortAModeReg &= ~(3 << 0);

	// 4. Enable Pull-up Resistor for PA0
	*pPortAPullUpDownReg &= ~(3 << 0); // Clear pull-up/pull-down bits for PA0
	*pPortAPullUpDownReg |= (1 << 0);  // Enable pull-up resistor for PA0

	while(1)
	{
		// Read the Pin Status of the Pin PA0 (GPIOA INPUT DATA REGISTER)
		uint8_t pinStatus = (uint8_t)(*pPortAInReg & 0x1);

		if(pinStatus)
		{
			// Turn on the LED
			// SET 12th bit of the output data register to make I/O pin-12 as HIGH
			*pPortDOutReg |= (1<<12);
		}
		else
		{
			// Turn off the LED
			*pPortDOutReg &= ~(1<<12);
		}
	}
}
